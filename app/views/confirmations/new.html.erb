<div class="flex items-center justify-center min-h-screen bg-gray-100 px-4">
  <div class="w-full max-w-md p-8 bg-white shadow-lg rounded-2xl space-y-6">
    
    <h1 class="mb-4 text-2xl font-bold text-center text-gray-800">
      <%= t("resend_confirmation.title", default: "Resend Confirmation Email") %>
    </h1>

    <%= form_with url: resend_confirmation_path, method: :post, local: true, class: "space-y-4" do |form| %>

      <!-- Email Input -->
      <div>
        <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email,
          required: true,
          class: "mt-1 w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Submit Button -->
      <div>
        <%= form.submit t("resend_confirmation.button", default: "Resend Confirmation"),
          class: "w-full mt-2 py-3 px-4 bg-blue text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 transition duration-200" %>
      </div>
    <% end %>

    <!-- Back to Sign In Link -->
    <div class="pt-2 text-center">
      <%= link_to t("resend_confirmation.back_to_sign_in", default: "← Back to Sign In"), 
          new_session_path(locale: params[:locale]),
          class: "inline-block text-sm text-blue-600 hover:underline" %>
    </div>

  </div>
</div>
