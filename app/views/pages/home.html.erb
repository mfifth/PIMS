                <div class="flex-1">
                  <h1 class="text-xl font-bold text-gray-800"><%= t('pims.screenshots.main_warehouse') %></h1>
                  <div class="text-gray-700 space-y-1 mt-2">
                    <p><strong class="font-semibold"><%= t('pims.screenshots.city') %>:</strong> Springfield</p>
                  </div>
                </div>
              </div>

              <div class="space-y-6">
