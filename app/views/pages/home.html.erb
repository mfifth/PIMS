  document.addEventListener('click', function(event) {
    const languageButton = document.getElementById('language-menu-button');
    const languageMenu = document.getElementById('language-menu');
    
    if (languageButton && languageButton.contains(event.target)) {
      event.preventDefault();
      if (languageMenu) {
        languageMenu.classList.toggle('hidden');
      }
    }
    else if (languageMenu && !languageMenu.contains(event.target)) {
      languageMenu.classList.add('hidden');
    }
  });

  function updateLanguageLinks() {
    document.querySelectorAll('#language-menu a').forEach(link => {
      const currentUrl = new URL(window.location.href);
      const newUrl = new URL(link.href);
      
      currentUrl.searchParams.forEach((value, key) => {
        if (key !== 'locale') {
          newUrl.searchParams.set(key, value);
        }
      });
      
      link.href = newUrl.toString();
    });
  }

    document.addEventListener('DOMContentLoaded', updateLanguageLinks);
    document.addEventListener('turbolinks:load', updateLanguageLinks);
    document.addEventListener('turbo:load', updateLanguageLinks);
</script>
