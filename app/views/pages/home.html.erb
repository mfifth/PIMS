                    <a href="#" class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium"><%= t('pims.screenshots.all') %></a>
                    <a href="#" class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm font-medium"><%= t('pims.screenshots.perishable') %></a>
                    <a href="#" class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm font-medium"><%= t('pims.screenshots.non_perishable') %></a>
                  </div>
                </div>

                <!-- Organic Apples -->
                <div class="bg-gray-50 p-6 rounded-lg shadow">
                  <div class="flex justify-between items-start">
                    <div>
                      <span class="font-semibold text-lg"><%= t('pims.screenshots.organic_apples') %></span>
                      <h5 class="text-sm text-gray-500"><%= t('pims.screenshots.sku') %>: APP-ORG-001</h5>
                      <span class="mt-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <svg class="mr-1 h-3 w-3 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                        <%= t('pims.screenshots.low_stock', threshold: 10) %>
                      </span>
                    </div>
                    <span class="text-gray-600 text-sm"><%= t('pims.screenshots.quantity') %>: 8</span>
                  </div>

                  <div class="mt-2 flex items-center space-x-3">
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                      <%= t('pims.screenshots.fruits') %>
                    </span>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                      <%= t('pims.screenshots.perishable') %>
                    </span>
                  </div>

                  <div class="mt-4 grid grid-cols-2 gap-4">
                    <div>
                      <p class="text-sm text-gray-500"><%= t('pims.screenshots.unit_price') %></p>
                      <p class="font-medium">$2.99</p>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500"><%= t('pims.screenshots.total_value') %></p>
                      <p class="font-medium">$23.92</p>
                    </div>
                  </div>

                  <div class="mt-4">
                    <p class="text-sm font-medium text-gray-700"><%= t('pims.screenshots.batch_details') %>:</p>
                    <div class="mt-2 text-sm text-gray-600">
                      <p><%= t('pims.screenshots.batch_number') %>: BCH-2023-05-001</p>
                      <p class="flex items-center">
                        <%= t('pims.screenshots.expiration') %>: Jun 15, 2023
                        <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                          <svg class="mr-1 h-3 w-3 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                          </svg>
                          <%= t('pims.screenshots.expiring_in', days: 5) %>
                        </span>
                      </p>
                    </div>
                  </div>
                </div>

                <!-- All-Purpose Flour -->
                <div class="bg-gray-50 p-6 rounded-lg shadow mt-4">
                  <div class="flex justify-between items-start">
                    <div>
                      <span class="font-semibold text-lg"><%= t('pims.screenshots.all_purpose_flour') %></span>
                      <h5 class="text-sm text-gray-500"><%= t('pims.screenshots.sku') %>: FLR-AP-001</h5>
                    </div>
                    <span class="text-gray-600 text-sm"><%= t('pims.screenshots.quantity') %>: 24</span>
                  </div>

                  <div class="mt-2 flex items-center space-x-3">
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                      <%= t('pims.screenshots.baking') %>
                    </span>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                      <%= t('pims.screenshots.perishable') %>
                    </span>
                  </div>

                  <div class="mt-4 grid grid-cols-2 gap-4">
                    <div>
                      <p class="text-sm text-gray-500"><%= t('pims.screenshots.unit_price') %></p>
                      <p class="font-medium">$3.49</p>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500"><%= t('pims.screenshots.total_value') %></p>
                      <p class="font-medium">$83.76</p>
                    </div>
                  </div>
                </div>

                <!-- Granulated Sugar -->
                <div class="bg-gray-50 p-6 rounded-lg shadow mt-4">
                  <div class="flex justify-between items-start">
                    <div>
                      <span class="font-semibold text-lg"><%= t('pims.screenshots.granulated_sugar') %></span>
                      <h5 class="text-sm text-gray-500"><%= t('pims.screenshots.sku') %>: SUG-GR-001</h5>
                    </div>
                    <span class="text-gray-600 text-sm"><%= t('pims.screenshots.quantity') %>: 18</span>
                  </div>

                  <div class="mt-2 flex items-center space-x-3">
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                      <%= t('pims.screenshots.pantry') %>
                    </span>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                      <%= t('pims.screenshots.perishable') %>
                    </span>
                  </div>

                  <div class="mt-4 grid grid-cols-2 gap-4">
                    <div>
                      <p class="text-sm text-gray-500"><%= t('pims.screenshots.unit_price') %></p>
                      <p class="font-medium">$2.29</p>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500"><%= t('pims.screenshots.total_value') %></p>
                      <p class="font-medium">$41.22</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Products Screenshot -->
        <div class="bg-white rounded-lg shadow-xl overflow-hidden">
          <div class="p-4 bg-gray-100 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900"><%= t('pims.screenshots.product_catalog') %></h3>
          </div>
          <div class="p-4 h-96 overflow-y-auto scroll-container bg-gray-800">
            <div class="space-y-6">
              <!-- Organic Apples -->
              <div class="bg-white p-6 rounded-lg shadow">
                <div>
                  <div class="text-lg font-semibold text-gray-800"><%= t('pims.screenshots.organic_apples') %></div>
                  <div class="text-sm text-gray-600">
                    <%= t('pims.screenshots.sku') %>: APP-ORG-001 | <%= t('pims.screenshots.category') %>: <%= t('pims.screenshots.fruits') %> | <%= t('pims.screenshots.price') %>: $2.99
                  </div>
                </div>

                <div class="mt-2 text-sm text-gray-700">
                  <strong><%= t('pims.screenshots.stock_locations') %>:</strong>
                  <p><%= t('pims.screenshots.main_warehouse') %>: 8 <%= t('pims.screenshots.units_in_stock') %></p>
                  <p><%= t('pims.screenshots.downtown_store') %>: 15 <%= t('pims.screenshots.units_in_stock') %></p>
                </div>

                <div class="mt-2 space-x-2">
                  <a href="#" class="text-blue-500 hover:underline"><%= t('pims.screenshots.view') %></a>
                  <a href="#" class="text-yellow-500 hover:underline"><%= t('pims.screenshots.edit') %></a>
                  <a href="#" class="text-red-500 hover:underline"><%= t('pims.screenshots.delete') %></a>
                </div>
              </div>

              <!-- All-Purpose Flour -->
              <div class="bg-white p-6 rounded-lg shadow">
                <div>
                  <div class="text-lg font-semibold text-gray-800"><%= t('pims.screenshots.all_purpose_flour') %></div>
                  <div class="text-sm text-gray-600">
                    <%= t('pims.screenshots.sku') %>: FLR-AP-001 | <%= t('pims.screenshots.category') %>: <%= t('pims.screenshots.baking') %> | <%= t('pims.screenshots.price') %>: $3.49
                  </div>
                </div>

                <div class="mt-2 text-sm text-gray-700">
                  <strong><%= t('pims.screenshots.stock_locations') %>:</strong>
                  <p><%= t('pims.screenshots.main_warehouse') %>: 24 <%= t('pims.screenshots.pounds_in_stock') %></p>
                  <p><%= t('pims.screenshots.downtown_store') %>: 12 <%= t('pims.screenshots.pounds_in_stock') %></p>
                </div>

                <div class="mt-2 space-x-2">
                  <a href="#" class="text-blue-500 hover:underline"><%= t('pims.screenshots.view') %></a>
                  <a href="#" class="text-yellow-500 hover:underline"><%= t('pims.screenshots.edit') %></a>
                  <a href="#" class="text-red-500 hover:underline"><%= t('pims.screenshots.delete') %></a>
                </div>
              </div>

              <!-- Granulated Sugar -->
              <div class="bg-white p-6 rounded-lg shadow">
                <div>
                  <div class="text-lg font-semibold text-gray-800"><%= t('pims.screenshots.granulated_sugar') %></div>
                  <div class="text-sm text-gray-600">
                    <%= t('pims.screenshots.sku') %>: SUG-GR-001 | <%= t('pims.screenshots.category') %>: <%= t('pims.screenshots.pantry') %> | <%= t('pims.screenshots.price') %>: $2.29
                  </div>
                </div>

                <div class="mt-2 text-sm text-gray-700">
                  <strong><%= t('pims.screenshots.stock_locations') %>:</strong>
                  <p><%= t('pims.screenshots.main_warehouse') %>: 18 <%= t('pims.screenshots.pounds_in_stock') %></p>
                  <p><%= t('pims.screenshots.downtown_store') %>: 9 <%= t('pims.screenshots.pounds_in_stock') %></p>
                </div>

                <div class="mt-2 space-x-2">
                  <a href="#" class="text-blue-500 hover:underline"><%= t('pims.screenshots.view') %></a>
                  <a href="#" class="text-yellow-500 hover:underline"><%= t('pims.screenshots.edit') %></a>
                  <a href="#" class="text-red-500 hover:underline"><%= t('pims.screenshots.delete') %></a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Recipes Screenshot -->
        <div class="bg-white rounded-lg shadow-xl overflow-hidden">
          <div class="p-4 bg-gray-100 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900"><%= t('pims.screenshots.recipe_management') %></h3>
          </div>
          <div class="p-4 h-96 overflow-y-auto scroll-container bg-gray-800">
            <div class="bg-white rounded-lg shadow p-6">
              <div class="flex justify-between items-start">
                <div>
                  <h2 class="text-xl font-semibold"><%= t('pims.screenshots.apple_pie') %></h2>
                  <p class="text-sm text-gray-500 mt-1"><%= t('pims.screenshots.recipe_id') %>: REC-001</p>
                </div>
                <div class="text-blue-500 hover:text-blue-700">
                  <%= t('pims.screenshots.edit') %>
                </div>
              </div>

              <div class="mt-4">
                <h3 class="font-bold text-gray-700 mb-2"><%= t('pims.screenshots.ingredients') %></h3>
                <ul class="space-y-3">
                  <li class="flex items-center gap-4">
