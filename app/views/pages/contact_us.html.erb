<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-3xl mx-auto">
    <h1 class="text-3xl font-extrabold text-gray-900">Contact Us</h1>
    <p class="mt-2 text-lg text-gray-600">Have questions? Send us a message and we will get back to you as soon as possible.</p>
    
    <%= form_with(url: 'contact_us_create', local: true, method: :post, class: "mt-8 space-y-6") do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :name, "Your Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-green-500 focus:border-green-500" %>
        </div>
        
        <div>
          <%= f.label :email, "Your Email*", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, required: true, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-green-500 focus:border-green-500" %>
        </div>
        
        <div>
          <%= f.label :message, "Your Message*", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :message, required: true, rows: 4, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-green-500 focus:border-green-500" %>
        </div>
      </div>
      
      <div>
        <%= f.submit "Send Message", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
      </div>
    <% end %>
  </div>
</div>