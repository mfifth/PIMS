
<% if notice %>
  <div class="mt-4 text-sm text-green-600 bg-green-100 border border-green-400 rounded-md p-3">
        <%= notice %>
    </div>
<% end %>
<% if alert %>
    <div class="mt-4 text-sm text-red-600 bg-red-100 border border-red-400 rounded-md p-3">
        <%= alert %>
    </div>
<% end %>