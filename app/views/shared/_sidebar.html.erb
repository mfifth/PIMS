<!-- Sidebar Wrapper with Stimulus -->
<div>
  <!-- Sidebar -->
  <div data-sidebar-target="sidebar"
       class="fixed top-0 left-0 z-50 w-64 h-full bg-[#f8f4f3] p-4 flex flex-col justify-between shadow-md transition-transform duration-300 transform -translate-x-full md:!translate-x-0 md:relative">

    <div>
      <!-- Logo -->
      <div class="flex items-center justify-between pb-4 border-b border-gray-300">
        <h2 class="font-bold text-2xl text-gray-900"><%= t("sidebar.logo") %></h2>
      </div>

      <!-- Navigation -->
      <ul class="mt-4 space-y-1">
        <span class="text-gray-500 text-xs font-bold uppercase tracking-wide"><%= t("sidebar.admin") %></span>

        <li><%= link_to t("sidebar.dashboard"), dashboard_path, class: sidebar_link_class(root_path) %></li>
        <li><%= link_to t("sidebar.locations"), locations_path, class: sidebar_link_class(locations_path) %></li>
        <li><%= link_to t("sidebar.products"), products_path, class: sidebar_link_class(products_path) %></li>
        <li><%= link_to t("sidebar.batches"), batches_path, class: sidebar_link_class(batches_path) %></li>
        <% if Current.user.admin? %>
          <li><%= link_to t("sidebar.recipes"), recipes_path, class: sidebar_link_class(recipes_path) %></li>
        <% end %>

        <span class="text-gray-500 text-xs font-bold uppercase tracking-wide"><%= t("sidebar.personal") %></span>
        <li>
          <%= link_to notifications_path, class: "#{sidebar_link_class(notifications_path)} justify-between" do %>
            <span><%= t("sidebar.notifications") %></span>
            <span class="px-2 py-0.5 text-xs font-medium rounded-full <%= Current.account.notifications.unread.size > 5 ? 'text-red-600 bg-red-200' : 'text-white bg-green' %>">
              <%= Current.account.notifications.unread.size %>
            </span>
          <% end %>
        </li>

        <li><%= link_to t("sidebar.settings"), settings_user_path(Current.user), class: sidebar_link_class(settings_user_path(Current.user)) %></li>
      </ul>
    </div>

    <!-- Sign Out -->
    <%= link_to signout_path, 
                data: { turbo_method: :delete, turbo_confirm: t('sign_out.sign_out_msg') },
                class: "flex items-center justify-center py-2 px-4 text-white bg-red-500 hover:bg-red-600 rounded-md" do %>
      <i class="bx bx-log-out mr-2 text-lg"></i> <%= t("sidebar.sign_out") %>
    <% end %>
  </div>

  <!-- Mobile Overlay -->
  <div data-sidebar-target="overlay"
       data-action="click->sidebar#close"
       class="fixed top-0 left-0 w-full h-full bg-black/50 z-40 md:hidden hidden">
  </div>
</div>
