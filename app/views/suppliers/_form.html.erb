<div class="max-w-lg mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
  <h1 class="text-2xl font-bold mb-4"><%= @supplier.new_record? ? "New Supplier" : "Edit Supplier" %></h1>

  <%= form_with(model: @supplier, local: true, class: "space-y-4") do |f| %>
    <div>
      <%= f.label :name, class: "block font-medium text-gray-700" %>
      <%= f.text_field :name, class: "w-full p-2 border rounded mt-1" %>
    </div>

    <div>
      <%= f.label :contact_name, class: "block font-medium text-gray-700" %>
      <%= f.text_field :contact_name, class: "w-full p-2 border rounded mt-1" %>
    </div>

    <div>
      <%= f.label :contact_email, class: "block font-medium text-gray-700" %>
      <%= f.email_field :contact_email, class: "w-full p-2 border rounded mt-1" %>
    </div>

    <div>
      <%= f.label :phone_number, class: "block font-medium text-gray-700" %>
      <%= f.text_field :phone_number, class: "w-full p-2 border rounded mt-1" %>
    </div>

    <div class="mt-4">
      <%= f.submit "Save", class: "bg-blue-500 text-white px-4 py-2 rounded w-full hover:bg-blue-600" %>
      <%= link_to "Cancel", suppliers_path, class: "cancel-btn-spacing bg-red-500 text-white px-4 py-2 rounded w-full hover:bg-red-600" %>
    </div>
  <% end %>
</div>
