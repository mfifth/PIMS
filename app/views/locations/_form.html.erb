<turbo-frame id="main">
  <div class="max-w-md mx-auto mt-10 bg-white p-6 sm:p-8 rounded-2xl shadow-lg border border-gray-200">
    <h1 class="text-2xl font-semibold text-center text-gray-800 mb-6">
      <%= location.new_record? ? t('locations.form.new_title') : t('locations.form.edit_title') %>
    </h1>

    <% if location.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6 text-sm">
        <ul class="list-disc pl-5 space-y-1">
          <% location.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: location, local: true, class: "space-y-5") do |f| %>
      <!-- Name -->
      <div>
        <%= f.label :name, t('locations.form.name'), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "w-full p-3 bg-gray-100 border border-gray-300 rounded-lg shadow-inner focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- City and Location UID -->
      <div class="grid grid-cols-1 gap-4">
        <div>
          <%= f.label :city, t('locations.form.city'), class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :city, class: "w-full p-3 bg-gray-100 border border-gray-300 rounded-lg shadow-inner focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div>
          <%= f.label :location_uid, t('locations.form.location_uid'), class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :location_uid, class: "w-full p-3 bg-gray-100 border border-gray-300 rounded-lg shadow-inner focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex justify-center gap-4 pt-4">
        <%= link_to t('cancel'), locations_path, class: "px-5 py-2 text-sm rounded-lg border border-gray-300 text-gray-600 hover:text-gray-900 hover:bg-gray-100 transition" %>
        <%= f.submit t('submit'), class: "px-6 py-2 text-sm rounded-lg bg-blue text-white hover:bg-blue-700 transition font-semibold" %>
      </div>
    <% end %>
  </div>
</turbo-frame>
