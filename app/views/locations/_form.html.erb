<turbo-frame id='main'>
  <div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">
      <%= location.new_record? ? t('locations.form.new_title') : t('locations.form.edit_title') %>
    </h1>

    <% if location.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded">
        <ul class="list-disc pl-5 mt-2 text-red-700">
          <% location.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: location, local: true, class: "space-y-6") do |f| %>
      <!-- Name -->
      <div>
        <%= f.label :name, t('locations.form.name'), class: "block font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Address -->
      <div>
        <%= f.label :address, t('locations.form.address'), class: "block font-medium text-gray-700 mb-1" %>
        <%= f.text_field :address, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- City, State -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :city, t('locations.form.city'), class: "block font-medium text-gray-700 mb-1" %>
          <%= f.text_field :city, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div>
          <%= f.label :state, t('locations.form.state'), class: "block font-medium text-gray-700 mb-1" %>
          <%= f.text_field :state, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <!-- Zip Code, Country -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :zip_code, t('locations.form.zip_code'), class: "block font-medium text-gray-700 mb-1" %>
          <%= f.text_field :zip_code, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div>
          <%= f.label :country, t('locations.form.country'), class: "block font-medium text-gray-700 mb-1" %>
          <%= f.text_field :country, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <!-- Buttons -->
      <div class="mt-6 flex justify-between">
        <%= f.submit t('locations.form.save'), class: "bg-green bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition" %>
        <%= link_to t('locations.form.cancel'), locations_path, class: "bg-gray text-white hover:text-gray-700 rounded-lg px-6 py-3 transition" %>
      </div>
    <% end %>
  </div>
</turbo-frame>
