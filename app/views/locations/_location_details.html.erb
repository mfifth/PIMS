<turbo-frame id='main'>
  <div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-md relative">
    <div class="flex justify-between items-end mb-6">
      <!-- Left Side - Location Info -->
      <div class="flex-1">
        <h1 class="text-xl font-bold text-gray-800"><%= @location.name %></h1>
        <div class="text-gray-700 space-y-1 mt-2">
          <p><strong class="font-semibold"><%= t("locations.show.address") %>:</strong> <%= @location.address %></p>
          <p><strong class="font-semibold"><%= t("locations.show.city") %>:</strong> <%= @location.city %></p>
        </div>
      </div>

      <!-- Right Side - Buttons -->
      <div>
        <!-- Import Button -->
        <%= form_with url: import_products_location_path(@location), 
              method: :post, 
              class: "flex",
              data: { 
                turbo: false,
                controller: "file",
                action: "change->file#submit" 
              } do |f| %>
          <div class="relative">
            <%= f.file_field :file, 
                            accept: ".csv", 
                            class: "hidden", 
                            id: "csv-upload-#{@location.id}",
                            data: { file_target: "input" } %>
            <label for="csv-upload-<%= @location.id %>" 
                  class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 
                        rounded-lg transition flex items-center cursor-pointer
                        whitespace-nowrap"
                  data-file-target="label">
              <span data-file-target="text">
                <%= t("locations.show.import_products") %>
              </span>
              <span class="ml-2 hidden" data-file-target="spinner">
                <!-- SVG Spinner -->
                <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </span>
            </label>
          </div>
        <% end %>

        <%= render 'export_button' %>

        <%= link_to sample_csv_location_path(@location), 
                    class: "text-blue-600 hover:text-blue-800 text-sm flex items-center",
                    style: 'margin-top: 10px;',
                    download: "sample_products.csv" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
          </svg>
          <%= t("locations.show.download_sample") %>
        <% end %>
      </div>
    </div>

    <hr class="border-gray-300 mb-6">

    <turbo-frame id='inventory-items'>
      <div class="space-y-6">
        <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-6">
          <h2 class="text-2xl font-semibold text-gray-800"><%= t("locations.show.inventory") %></h2>

          <!-- Filter Toggles -->
          <div class="flex flex-wrap gap-2 mt-4 md:mt-0 md:space-x-2">
            <%= link_to t("locations.show.filters.all"), 
                        location_path(@location), 
                        class: filter_link_class(nil, nil),
                        data: { turbo_action: 'advance', turbo_frame: 'main' } %>

            <%= link_to t("locations.show.filters.perishable"), 
                        location_path(@location, perishable: true), 
                        class: filter_link_class(:perishable, true),
                        data: { turbo_action: 'advance', turbo_frame: 'main' } %>

            <%= link_to t("locations.show.filters.non_perishable"), 
                        location_path(@location, perishable: false), 
                        class: filter_link_class(:perishable, false),
                        data: { turbo_action: 'advance', turbo_frame: 'main' } %>

            <%= link_to t("locations.show.filters.low_stock"), 
                        location_path(@location, low_stock: true), 
                        class: filter_link_class(:low_stock, true),
                        data: { turbo_action: 'advance', turbo_frame: 'main' } %>

            <%= link_to t("locations.show.filters.expiring"), 
                location_path(@location, expiring: true), 
                class: filter_link_class(:expiring, true),
                data: { turbo_action: 'advance', turbo_frame: 'main' } %>
          </div>
        </div>
        
        <% total_inventory_value = 0 %>
        <% @inventory_items.group_by(&:product).each do |product, items| %>
          <% items.each do |item| %>
            <% is_low_stock = item.low_threshold.present? && item.quantity <= item.low_threshold %>
            <% expiration_notification = product.batch&.notification_days_before_expiration.to_i.positive? %>
            <% days_until_expiry = product.batch ? (product.batch.expiration_date - Date.today).to_i : nil %>
            <% expiring_soon = expiration_notification && days_until_expiry && days_until_expiry <= product.batch.notification_days_before_expiration %>

            <%= link_to product_path(product), class: "block hover:no-underline", data: { turbo_frame: '_top' } do %>
              <div class="bg-gray-50 p-6 rounded-lg shadow hover:shadow-lg transition-all <%= is_low_stock ? 'border-l-4 border-red-500' : '' %>">
                <!-- Product Header with Stock Alert -->
                <div class="flex justify-between items-start">
                  <div>
                    <span class="font-semibold text-lg"><%= product.name %></span>
                    <% if is_low_stock %>
                      <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <svg class="mr-1 h-3 w-3 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                        <%= t("locations.show.low_stock", threshold: item.low_threshold) %>
                      </span>
                    <% end %>
                  </div>
                  <span class="text-gray-600 text-sm"><%= t("locations.show.quantity") %>: <%= item.quantity %></span>
                </div>

                <!-- Category and Perishable Badge -->
                <div class="mt-2 flex items-center space-x-3">
                  <% if product.category.present? %>
                    <span style='background-color: azure!important;' class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-azure text-gray-800">
                      <%= product.category.name&.capitalize %>
                    </span>
                  <% end %>

                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= product.perishable? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                    <%= product.perishable? ? t("locations.show.perishable") : t("locations.show.non_perishable") %>
                  </span>
                </div>

                <!-- Price and Total Value -->
                <div class="mt-4 grid grid-cols-2 gap-4">
                  <div>
                    <p class="text-sm text-gray-500"><%= t("locations.show.unit_price") %></p>
                    <p class="font-medium"><%= number_to_currency(product.price) %></p>
                  </div>
                  <div>
                    <p class="text-sm text-gray-500"><%= t("locations.show.total_value") %></p>
                    <p class="font-medium">
                      <% item_value = item.quantity * product.price %>
                      <% total_inventory_value += item_value %>
                      <%= number_to_currency(item_value) %>
                    </p>
                  </div>
                </div>

                <!-- Batch Information -->
                <% if product.perishable? && product.batch %>
                  <div class="mt-4">
                    <p class="text-sm font-medium text-gray-700"><%= t("locations.show.batch_details") %>:</p>
                    <div class="mt-2 text-sm text-gray-600">
                      <p><%= t("locations.show.batch_number", number: product.batch.batch_number) %></p>
                      <p class="flex items-center">
                        <%= t("locations.show.expiration") %>: <%= product.batch.expiration_date.strftime("%b %d, %Y") %>
                        <% if expiration_notification %>
                          <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                            <svg class="mr-1 h-3 w-3 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                            </svg>
                            <%= expiring_soon ? t("locations.show.expiring_soon", days: days_until_expiry) : t("locations.show.notifications_enabled") %>
                          </span>
                        <% end %>
                      </p>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </turbo-frame>

      <!-- Total Inventory Value -->
      <% if @inventory_items.any? %>
        <div class="mt-6 p-4 bg-blue-50 rounded-lg">
          <div class="flex justify-between items-center">
            <span class="font-medium text-blue-800"><%= t("locations.show.total_inventory_value") %></span>
            <span class="text-xl font-bold text-blue-600">
              <%= number_to_currency(total_inventory_value) %>
            </span>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Action Buttons -->
    <div class="mt-8 flex space-x-4">
      <%= link_to t("locations.show.edit_location"), edit_location_path(@location), data: { turbo_frame: 'main' }, class: "bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg transition flex items-center" %>
      <%= link_to locations_path, data: { turbo_frame: 'main' }, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition flex items-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        <%= t("locations.show.back_to_locations") %>
      <% end %>
    </div>
  </div>
</turbo-frame>
