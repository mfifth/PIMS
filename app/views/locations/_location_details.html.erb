<turbo-frame id='main'>
  <div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-md">
    <!-- Location Header -->
    <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @location.name %></h1>

    <!-- Address Details -->
    <div class="text-gray-700 space-y-2 mb-6">
      <p><strong class="font-semibold"><%= t("locations.show.address") %>:</strong> <%= @location.address %></p>
      <p><strong class="font-semibold"><%= t("locations.show.city") %>:</strong> <%= @location.city %></p>
    </div>

    <hr class="border-gray-300 mb-6">

    <!-- Inventory Section -->
    <% if @inventory_items.any? %>
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-semibold text-gray-800"><%= t("locations.show.inventory_items") %></h2>

        <!-- Filter Toggles -->
        <div class="flex space-x-2">
          <%= link_to t("locations.show.filters.all"), location_path(@location), data: { turbo_frame: 'inventory-items' }, class: "px-3 py-1 rounded-lg" %>
          <%= link_to t("locations.show.filters.perishable"), location_path(@location, perishable: true), data: { turbo_frame: 'inventory-items' }, class: "px-3 py-1 rounded-lg" %>
          <%= link_to t("locations.show.filters.non_perishable"), location_path(@location, perishable: false), data: { turbo_frame: 'inventory-items' }, class: "px-3 py-1 rounded-lg" %>
        </div>
      </div>
    <% end %>

    <turbo-frame id='inventory-items'>
      <div class="space-y-6">
        <% total_inventory_value = 0 %>
        <% @inventory_items.group_by(&:product).each do |product, items| %>
          <% items.each do |item| %>
            <% is_low_stock = item.low_threshold.present? && item.quantity <= item.low_threshold %>
            <% expiration_notification = product.batch&.notification_days_before_expiration.to_i.positive? %>
            <% days_until_expiry = product.batch ? (product.batch.expiration_date - Date.today).to_i : nil %>
            <% expiring_soon = expiration_notification && days_until_expiry && days_until_expiry <= product.batch.notification_days_before_expiration %>

            <%= link_to product_path(item), class: "block hover:no-underline", data: { turbo_frame: '_top' } do %>
              <div class="bg-gray-50 p-6 rounded-lg shadow hover:shadow-lg transition-all <%= is_low_stock ? 'border-l-4 border-red-500' : '' %>">
                <!-- Product Header with Stock Alert -->
                <div class="flex justify-between items-start">
                  <div>
                    <span class="font-semibold text-lg"><%= product.name %></span>
                    <% if is_low_stock %>
                      <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <svg class="mr-1 h-3 w-3 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                        <%= t("locations.show.low_stock", threshold: item.low_threshold) %>
                      </span>
                    <% end %>
                  </div>
                  <span class="text-gray-600 text-sm"><%= t("locations.show.quantity") %>: <%= item.quantity %></span>
                </div>

                <!-- Category and Perishable Badge -->
                <div class="mt-2 flex items-center space-x-3">
                  <% if product.category.present? %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                      <%= product.category.name&.capitalize %>
                    </span>
                  <% end %>

                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= product.perishable? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                    <%= product.perishable? ? t("locations.show.perishable") : t("locations.show.non_perishable") %>
                  </span>
                </div>

                <!-- Price and Total Value -->
                <div class="mt-4 grid grid-cols-2 gap-4">
                  <div>
                    <p class="text-sm text-gray-500"><%= t("locations.show.unit_price") %></p>
                    <p class="font-medium"><%= number_to_currency(product.price) %></p>
                  </div>
                  <div>
                    <p class="text-sm text-gray-500"><%= t("locations.show.total_value") %></p>
                    <p class="font-medium">
                      <% item_value = item.quantity * product.price %>
                      <% total_inventory_value += item_value %>
                      <%= number_to_currency(item_value) %>
                    </p>
                  </div>
                </div>

                <!-- Batch Information -->
                <% if product.perishable? && product.batch %>
                  <div class="mt-4">
                    <p class="text-sm font-medium text-gray-700"><%= t("locations.show.batch_details") %>:</p>
                    <div class="mt-2 text-sm text-gray-600">
                      <p><%= t("locations.show.batch_number", number: product.batch.batch_number) %></p>
                      <p class="flex items-center">
                        <%= t("locations.show.expiration") %>: <%= product.batch.expiration_date.strftime("%b %d, %Y") %>
                        <% if expiration_notification %>
                          <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                            <svg class="mr-1 h-3 w-3 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                            </svg>
                            <%= expiring_soon ? t("locations.show.expiring_soon", days: days_until_expiry) : t("locations.show.notifications_enabled") %>
                          </span>
                        <% end %>
                      </p>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </turbo-frame>

      <!-- Total Inventory Value -->
      <% if @inventory_items.any? %>
        <div class="mt-6 p-4 bg-blue-50 rounded-lg">
          <div class="flex justify-between items-center">
            <span class="font-medium text-blue-800"><%= t("locations.show.total_inventory_value") %></span>
            <span class="text-xl font-bold text-blue-600">
              <%= number_to_currency(total_inventory_value) %>
            </span>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Action Buttons -->
    <div class="mt-8 flex space-x-4">
      <%= link_to t("locations.show.edit_location"), edit_location_path(@location), class: "bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg transition flex items-center" %>
      <%= link_to locations_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition flex items-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        <%= t("locations.show.back_to_locations") %>
      <% end %>
    </div>
  </div>
</turbo-frame>
