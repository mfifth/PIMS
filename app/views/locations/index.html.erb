<turbo-frame id="main" class="block">
  <div class="flex justify-between items-start mb-8">
    <h1 class="text-lg font-bold text-gray-900"><%= t("locations.title", default: "Locations") %></h1>
    <%= link_to new_location_path, 
        data: { turbo_frame: 'main' }, 
        class: "bg-green hover:bg-green-700 text-white px-5 py-2.5 rounded-lg shadow-sm transition-colors duration-200 flex items-center" do %>
      <%= t("locations.new_location", default: "New Location") %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
    <% @locations.each do |location| %>
      <div class="relative h-full"" data-controller="flip">
        <!-- Front of Card -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-colors duration-200 flex flex-col h-full" data-flip-target="front">
          <div class="p-4 border-b border-gray-100">
            <div class="flex justify-between items-start gap-2">
              <h2 class="text-lg font-semibold text-gray-800 truncate"><%= location.name %></h2>
            
              <!-- View Recipes button moved to top-right -->
              <button class="text-purple-600 hover:text-purple-800 font-medium text-xs flex items-center space-x-1" 
                      data-action="click->flip#flip">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                <span><%= t('sidebar.recipes') %></span>
              </button>
            </div>

            <div class="mt-2 flex items-center text-gray-600 text-sm">
              <svg style='width: 20px;' xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span><%= location.city.titleize %></span>
            </div>
          </div>

          <% if ['plus', 'premium'].include?(Current.account.subscription.plan) %>
            <% if location.location_uid.present? %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <svg class="-ml-0.5 mr-1 h-3 w-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <%= t("locations.synced") %>
              </span>
            <% else %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                <svg class="-ml-0.5 mr-1 h-3 w-3 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
                <%= t("locations.not_synced") %>
              </span>
            <% end %>
          <% end %>

          <!-- Card Body -->
          <div class="p-4 space-y-4 flex-grow">
            <div class="space-y-2">
              <h3 class="font-medium text-gray-800 text-sm flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
                <%= t("locations.inventory", default: "Inventory") %>
              </h3>

              <div class="grid grid-cols-2 gap-2 text-xs">
                <div class="bg-blue-50 p-2 rounded space-y-0.5">
                  <p class="text-blue-800 font-medium"><%= t("locations.perishable_items") %></p>
                  <p class="text-gray-700">
                  <%= location.perishable_count %> <%= t("locations.products") %>
                  </p>
                </div>
                <div class="bg-green-50 p-2 rounded space-y-0.5">
                  <p class="text-green-800 font-medium"><%= t("locations.non_perishable_items") %></p>
                  <p class="text-gray-700">
                    <%= location.non_perishable_count %> <%= t("locations.products") %>
                  </p>
                </div>
              </div>
            </div>

            <div class="space-y-2">
              <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">
                <%= t("locations.categories", default: "Categories") %>
              </h4>

              <div class="relative h-[200px]">
                <div
                  id="location-<%= location.id %>-categories"
                  class="absolute inset-0 overflow-y-auto scroll-container"
                  data-controller="category"
                  data-category-url-value="<%= categories_location_path(location) %>"
                  data-category-load-more-distance-value="5"
                >
                  <% location.inventory_items
                      .joins(product: :category)
                      .group('categories.name')
                      .select(
                        'categories.name as category_name',
                        'COUNT(DISTINCT products.id) as total_quantity',
                        'SUM(inventory_items.quantity * products.price) as total_value'
                      )
                      .order('total_value DESC')
                      .each do |category| %>
                    <div class="flex items-center justify-between p-2 hover:bg-gray-50 rounded">
                      <div class="flex items-center space-x-3">
                        <div>
                          <p class="text-sm font-medium text-gray-800"><%= category.category_name %></p>
                          <p class="text-xs text-gray-500"><%= category.total_quantity %> <%= t("locations.products", default: "products") %></p>
                        </div>
                      </div>
                      <div class="text-right">
                        <p class="text-sm font-medium text-gray-800">
                          <%= number_to_currency(category.total_value.to_f) %>
                        </p>
                        <p class="text-xs text-gray-500"><%= t("locations.total_value", default: "Total value") %></p>
                      </div>
                    </div>
                  <% end %>

                  <!-- Loader -->
                  <div
                    id="location-<%= location.id %>-categories-loader"
                    data-category-target="loader"
                    class="hidden py-2 flex justify-center"
                  >
                    <svg class="animate-spin h-4 w-4 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" />
                      <path
                        class="opacity-75"
                        fill="currentColor"
                        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 
                        3.042 1.135 5.824 3 7.938l3-2.647z"
                      />
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Card Footer -->
          <div class="bg-gray-50 px-4 py-3 flex justify-between border-t border-gray-100">
            <%= link_to location, class: "text-xs text-blue-600 hover:text-blue-800 font-medium flex items-center space-x-1", data: { turbo_frame: 'main' } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <span><%= t("locations.view", default: "View") %></span>
            <% end %>

            <%= link_to edit_location_path(location), class: "text-xs text-yellow-600 hover:text-yellow-800 font-medium flex items-center space-x-1", data: { turbo_frame: 'main' } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              <span><%= t("locations.edit", default: "Edit") %></span>
            <% end %>

            <!-- Delete Location Link - Restored -->
            <%= link_to location, 
                data: { turbo_confirm: t("confirm_delete_location"), turbo_method: :delete }, 
                class: "text-xs text-red-600 hover:text-red-800 font-medium flex items-center space-x-1" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              <span><%= t("locations.delete", default: "Delete") %></span>
            <% end %>
          </div>
        </div>

        <!-- Back of Card (Recipes) -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hidden flex flex-col h-full min-h-[25rem]" data-flip-target="back">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-semibold text-gray-800">
              <%= t('locations.recipes_for_location', location: location.name) %>
            </h2>
            <button class="text-gray-500 hover:text-gray-700" data-action="click->flip#flip">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>

          <div class="flex-grow overflow-y-auto scroll-container">
            <% available_recipes = @recipes.select { |recipe| max_quantity_and_expiration(location, recipe)[0] > 0 } %>
            
            <% if available_recipes.any? %>
              <% available_recipes.each do |recipe| %>
                <% quantity, expiration = max_quantity_and_expiration(location, recipe) %>
                <div class="border-b border-gray-100 pb-4 mb-4 last:border-0">
                  <div class="flex justify-between items-center">
                    <div>
                      <h3 class="font-medium text-gray-800"><%= recipe.name %></h3>
                      <% cost_per_recipe = recipe.estimated_cost(location) %>
                      <% profit_per_recipe = recipe.price - cost_per_recipe %>
                      <% total_profit = profit_per_recipe * quantity %>

                      <p class="text-sm font-medium text-green-600">
                        <%= number_to_currency(total_profit) %>
                        <%= t('locations.estimated_profit') %>
                      </p>
                    </div>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <%= t('locations.can_make_count', count: quantity) %>
                    </span>
                  </div>
                  
                  <% if expiration %>
                    <p class="text-sm text-gray-600 mt-1">
                      <%= t('locations.available_until', date: l(expiration, format: :short)) %>
                    </p>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-8">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t('locations.no_recipes_title') %></h3>
                <p class="mt-1 text-sm text-gray-500"><%= t('locations.no_recipes_description') %></p>
              </div>
            <% end %>
          </div>

          <div class="mt-auto pt-4 border-t border-gray-100">
            <button class="text-xs text-purple-600 hover:text-purple-800 font-medium flex items-center space-x-1" data-action="click->flip#flip">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              <span><%= t('locations.back_to_location') %></span>
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</turbo-frame>