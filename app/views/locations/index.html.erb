<h1 class="text-2xl font-semibold mb-4">Locations</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @locations.each do |location| %>
    <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= location.name %></h2>
      <p class="text-gray-600"><strong>Address:</strong> <%= location.address %>, <%= location.city %>, <%= location.state %></p>
      
      <!-- Categories & Quantity -->
      <div class="mt-4">
        <h3 class="text-lg font-semibold text-gray-800">Product Inventory</h3>
        <ul class="list-disc list-inside text-gray-700 mt-2">
          <% location.inventory_items.joins(product: :category).group("categories.name").sum(:quantity).each do |category_name, quantity| %>
            <li><strong><%= category_name %></strong>: <%= quantity %> items</li>
          <% end %>
        </ul>
      </div>

      <!-- Categories & Costs -->
      <div class="mt-4">
        <h3 class="text-lg font-semibold text-gray-800">Category Costs</h3>
        <ul class="list-disc list-inside text-gray-700 mt-2">
          <% location.inventory_items.joins(product: :category).group("categories.name").sum("inventory_items.quantity * products.price").each do |category_name, cost| %>
            <li><strong><%= category_name %></strong>: <%= number_to_currency(cost) %></li>
          <% end %>
        </ul>
      </div>

      <!-- Actions -->
      <div class="mt-4 flex space-x-4">
        <%= link_to 'Show', location, class: "text-blue-500 font-medium hover:underline" %>
        <%= link_to 'Edit', edit_location_path(location), class: "text-yellow-500 font-medium hover:underline" %>
        <%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 font-medium hover:underline" %>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-6">
  <%= link_to 'New Location', new_location_path, class: "bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600" %>
</div>
