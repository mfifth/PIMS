<turbo-frame id='main'>
  <div class="flex justify-between items-center mb-6">
    <h1 style='font-size: x-large' class="text-6xl font-bold text-gray-800">Locations</h1>
    <%= link_to 'New Location', new_location_path, class: "bg-green bg-green-500 text-white px-5 py-2.5 rounded-lg shadow-md hover:bg-green-600 transition" %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @locations.each do |location| %>
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-300 transition hover:shadow-xl">
        <!-- Location Header (with Square Sync Badge) -->
        <div class="flex justify-between items-start mb-3">
          <h2 class="text-2xl font-semibold text-gray-900"><%= location.name %></h2>
          <% if ['plus', 'premium'].include?(Current.account.subscription.plan) %>
            <% if location.square_location_id.present? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <svg class="-ml-0.5 mr-1 h-3 w-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Synced with Square
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                <svg class="-ml-0.5 mr-1 h-3 w-3 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
                Not Synced
              </span>
            <% end %>
          <% end %>
        </div>
        
        <!-- Rest of your existing card content remains the same -->
        <p class="text-gray-700 text-sm mb-4">
          <strong class="font-semibold">Address:</strong> 
          <%= location.address %>, <%= location.city %>, <%= location.state %>
        </p>

        <!-- Actions -->
        <div class="mt-5 flex justify-between">
          <%= link_to 'Show', location, data: { turbo_frame: 'main' }, class: "text-blue-600 hover:text-blue-700 font-medium" %>
          <%= link_to 'Edit', edit_location_path(location), data: { turbo_frame: 'main' }, class: "text-yellow-600 hover:text-yellow-700 font-medium" %>
          <%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-700 font-medium" %>
        </div>
        
        <!-- ... rest of your card content ... -->
      </div>
    <% end %>
  </div>
</turbo-frame>