<% if @categories.next_page %>
  <%= turbo_stream.append "location-#{@location.id}-categories" do %>
    <%= render partial: 'categories/category', 
               collection: @categories,
               as: :category,
               locals: { location: @location } %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "location-#{@location.id}-categories-loader" do %>
    <div class="py-2 text-center text-xs text-gray-500">No more categories</div>
  <% end %>
<% end %>