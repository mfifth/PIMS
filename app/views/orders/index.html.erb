<turbo-frame id="main">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-semibold text-gray-800">Orders</h1>
    <%= link_to "New Order", new_order_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" %>
  </div>

  <% if @orders.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden border border-gray-200">
        <thead class="bg-gray-100 text-left text-sm text-gray-600 uppercase tracking-wider">
          <tr>
            <th class="px-6 py-3">Order #</th>
            <th class="px-6 py-3">Location</th>
            <th class="px-6 py-3">Created At</th>
            <th class="px-6 py-3">Total</th>
            <th class="px-6 py-3">Actions</th>
          </tr>
        </thead>
        <tbody class="text-gray-700 divide-y divide-gray-100">
          <% @orders.each do |order| %>
            <tr>
              <td class="px-6 py-4 font-medium text-gray-900">#<%= order.id %></td>
              <td class="px-6 py-4">
                <%= order.order_items.first&.location&.name || "N/A" %>
              </td>
              <td class="px-6 py-4"><%= l(order.created_at, format: :short) %></td>
              <td class="px-6 py-4 font-semibold text-green-700">$<%= number_with_precision(order.total, precision: 2) %></td>
              <td class="px-6 py-4 space-x-2">
                <%= link_to "View", order_path(order), class: "text-blue-600 hover:underline text-sm" %>
                <%= link_to "Edit", edit_order_path(order), class: "text-yellow-600 hover:underline text-sm" %>
                <%= link_to "Delete", order_path(order),
                            method: :delete,
                            data: { confirm: "Are you sure?" },
                            class: "text-red-600 hover:underline text-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center text-gray-500 mt-12">
      <p class="text-lg">No orders yet.</p>
      <p class="mt-2">
        <%= link_to "Create your first order", new_order_path, class: "text-blue-600 hover:underline" %>
      </p>
    </div>
  <% end %>
</turbo-frame>
