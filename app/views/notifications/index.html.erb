<div class="max-w-2xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-gray-800"><%= t("notifications.title") %></h1>
    <% if @notifications.any? %>
      <%= button_to t("notifications.mark_all_as_read"), mark_all_as_read_notifications_path, method: :patch, class: "text-sm font-medium text-blue-600 hover:text-blue-800" %>
    <% end %>
  </div>

  <div class="space-y-3">
    <% if @notifications.any? %>
      <% @notifications.each do |notification| %>
        <div class="relative">
          <%= button_to mark_as_read_notification_path(notification), method: :patch, class: "block" do %>
            <div class="p-4 rounded-xl transition-all duration-200 <%= notification.read ? 'bg-gray-50 hover:bg-gray-100' : 'bg-blue-50 hover:bg-blue-100 border-l-4 border-blue-500' %>">
              <div class="flex items-start">
                <div class="flex-shrink-0 pt-0.5">
                  <div class="h-3 w-3 rounded-full <%= notification.read ? 'bg-gray-400' : 'bg-blue-500' %>"></div>
                </div>
                <div class="ml-3 flex-1">
                  <p class="text-left text-sm font-medium text-gray-900"><%= notification.message %></p>
                  <div class="mt-1 flex items-center text-xs text-gray-500">
                    <span class="inline-flex items-center px-2 py-0.5 rounded bg-gray-100 text-gray-800">
                      <%= t("notifications.types.#{notification.notification_type}", default: notification.notification_type.humanize) %>
                    </span>
                    <span class="mx-1">â€¢</span>
                    <span><%= t("notifications.ago", time: time_ago_in_words(notification.created_at)) %></span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t("notifications.empty.title") %></h3>
        <p class="mt-1 text-sm text-gray-500"><%= t("notifications.empty.body") %></p>
      </div>
    <% end %>
  </div>
</div>
