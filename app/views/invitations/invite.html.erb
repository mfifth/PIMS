<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-4">Confirm Invitation</h1>
  
  <p class="mb-4">"You've been invited to join" <%= @invitation.account.name %> as a <%= @invitation.role %>.</p>
  
  <%= form_with url: confirm_invitation_path(token: @invitation.token), method: :post do |f| %>
    <div class="mb-4">
      <%= f.label :email, "Your Email", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, value: @invitation.email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>
    
    <%= f.submit "Confirm Invitation", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700" %>
  <% end %>
</div>