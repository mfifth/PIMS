<li class="bg-gray-50 p-4 rounded-md shadow-sm hover:shadow-md transition">
  <a href="<%= batch_path(batch) %>" class="block text-blue-600 font-medium">
    <%= batch.batch_number %>
  </a>
  <p class="text-gray-500 text-xs">
    <strong><%= t("batches.mfg") %>:</strong> <%= batch.manufactured_date || t("batches.na") %><br>
    <strong><%= t("batches.exp") %>:</strong> <%= batch.expiration_date || t("batches.na") %><br>
    <strong><%= t("batches.products") %>:</strong> <%= batch.products.count %>
  </p>
</li>
