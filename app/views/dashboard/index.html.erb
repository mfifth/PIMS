<div class="p-8 bg-gray-100 min-h-screen" data-controller="dashboard">
  <h1 class="text-6xl font-bold text-gray-800 mb-6"><%= t("sidebar.dashboard") %></h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

    <!-- Batches Card -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800 mb-4"><%= t('sidebar.batches') %></h2>
      <p class="text-4xl font-bold text-blue-600"><%= @batches.total_count %></p>
    
      <div id="batches-scroll-container" class="mt-4 overflow-y-auto max-h-[400px] scroll-container" data-dashboard-target="scrollContainer">
        <ul class="space-y-3" data-dashboard-target="entries" id="batches-list">
          <% @batches.each do |batch| %>
            <%= render 'batch', batch: batch %>
          <% end %>
        </ul>
        
        <% if @batches.next_page %>
          <div data-dashboard-target="pagination" id="batches-pagination" class="hidden">
            <%= link_to "Next page", dashboard_path(page: @batches.next_page, card: 'batches'), 
            rel: 'next', data: { turbo_frame: "batches_frame" } %>
          </div>
        <% end %>
      </div>
    </div>
  
    <!-- Locations Card -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800 mb-4"><%= t('sidebar.locations') %></h2>
      <p class="text-4xl font-bold text-green-600"><%= @locations.total_count %></p>

      <div id="locations-scroll-container" class="mt-4 overflow-y-auto max-h-[400px] scroll-container" data-dashboard-target="scrollContainer">
        <ul class="space-y-3" data-dashboard-target="entries" id="locations-list">
          <% @locations.each do |location| %>
            <%= render 'location', location: location %>
          <% end %>
        </ul>
        
        <% if @locations.next_page %>
          <div data-dashboard-target="pagination" id="locations-pagination" class="hidden">
            <%= link_to "Next page", dashboard_path(page: @locations.next_page, card: 'locations'), 
            rel: 'next', data: { turbo_frame: "locations_frame" } %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Products Card -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800 mb-4"><%= t('sidebar.products') %></h2>
      <p class="text-4xl font-bold text-purple-600"><%= @products.total_count %></p>

      <div id="products-scroll-container" class="mt-6 overflow-y-auto max-h-[400px] scroll-container" data-dashboard-target="scrollContainer">
        <ul class="space-y-3" data-dashboard-target="entries" id="products-list">
          <% @products.each do |product| %>
            <%= render 'product', product: product %>
          <% end %>
        </ul>

        <% if @products.next_page %>
          <div data-dashboard-target="pagination" id="products-pagination" class="hidden">
            <%= link_to "Next page", dashboard_path(page: @products.next_page, card: 'products'), 
            rel: 'next',  data: { turbo_frame: "products_frame" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= turbo_frame_tag "batches_frame" %>
<%= turbo_frame_tag "locations_frame" %>
<%= turbo_frame_tag "products_frame" %>