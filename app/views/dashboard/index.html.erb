<!-- Content -->
<div class="p-8 bg-gray-100 min-h-screen">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Dashboard</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

    <!-- Batches Card -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Batches</h2>
      <p class="text-4xl font-bold text-blue-600"><%= @batches.count %></p>

      <ul class="mt-4 space-y-3">
        <% @batches.each do |batch| %>
          <li class="bg-gray-50 p-4 rounded-md shadow-sm hover:shadow-md transition">
            <a href="<%= batch_path(batch) %>" class="block text-blue-600 font-medium">
              <%= batch.batch_number %>
            </a>
            <p class="text-gray-500 text-xs">
              <strong>MFG:</strong> <%= batch.manufactured_date %>
              <br>
              <strong>EXP:</strong> <%= batch.expiration_date %>
            </p>
          </li>
        <% end %>
      </ul>

      <div class="mt-4 flex space-x-3">
        <a href="/batches" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">View All</a>
        <a href="/batches/new" class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600">Add New</a>
      </div>
    </div>

    <!-- Locations Card -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Locations</h2>
      <p class="text-4xl font-bold text-green-600"><%= @locations.count %></p>

      <ul class="mt-4 space-y-3">
        <% @locations.each do |location| %>
          <li class="bg-gray-50 p-4 rounded-md shadow-sm hover:shadow-md transition flex flex-col">
            <div class="flex justify-between items-center">
              <a href="<%= location_path(location) %>" class="text-green-600 font-medium">
                <%= location.name %>
              </a>
            </div>

            <!-- List of Products & Perishable Count -->
            <div class="mt-2 text-sm text-gray-700">
              <% location.inventory_items.limit(5).joins(product: :batch).each do |item| %>
                <p><strong><%= item.product.name %></strong>: <%= item.quantity %> in stock</p>
              <% end %>
              
              <% perishable_count = location.inventory_items.count { |item| item.product.perishable } %>
              <br>
              <p class="text-xs text-gray-500">
                <%= perishable_count %> perishable items
              </p>
            </div>
          </li>
        <% end %>
      </ul>

      <div class="mt-4 flex space-x-3">
        <a href="/locations" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">View All</a>
        <a href="/locations/new" class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600">Add New</a>
      </div>
    </div>

    <!-- Products Card -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Products</h2>
      <p class="text-4xl font-bold text-purple-600"><%= Current.account.products.perishable.count %></p>

      <!-- Perishable Products -->
      <div class="mt-6">
        <h3 class="text-lg font-semibold text-gray-700">Perishables</h3>
        <ul class="mt-2 space-y-3">
          <% @perishables.each do |product| %>
            <li class="bg-gray-50 p-4 rounded-md shadow-sm hover:shadow-md transition">
            <div class="flex justify-between">
              <span class="text-gray-800 font-medium"><%= product.name %></span>
              
              <% if product.batch&.expiration_date.present? %>
                <% expiration_date = product.batch.expiration_date %>
                <% color_class = expiration_date <= Date.today + 7 ? "text-red-500" : "text-green-500" %>
            
                <span class="<%= color_class %> text-sm"><%= expiration_date %></span>
              <% else %>
                <span class="text-gray-500 text-sm">No Expiration Date</span>
              <% end %>
            </div>
          
              <% product.locations.each do |location| %>
                <p class="text-gray-500 text-xs">Qty: <%= product.inventory_items.sum(:quantity) %></p>
                <p class="text-gray-500 text-xs">Location: <%= location.name %></p>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="mt-4 flex space-x-3">
        <a href="/products" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">View All</a>
        <a href="/products/new" class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600">Add New</a>
      </div>
    </div>
  </div>
</div>
