<div class="p-8 bg-gray-100 min-h-screen" data-controller="dashboard">
  <h1 class="text-6xl font-bold text-gray-800 mb-6"><%= t("sidebar.dashboard") %></h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

    <!-- Products Card -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800 mb-4"><%= t('products.index.title') %></h2>
      <p class="text-4xl font-bold text-purple-600"><%= @products.total_count %></p>

      <div id="products-scroll-container" class="mt-6 overflow-y-auto max-h-[400px] scroll-container">
        <ul class="space-y-3" id="products-list">
          <% @products.each do |product| %>
            <%= render 'dashboard/product', product: product %>
          <% end %>
        </ul>

        <% if @products.next_page %>
          <div id="products-pagination" class="hidden">
            <%= link_to "Next page", dashboard_path(products_page: @products.next_page, card: 'products'), 
                        rel: 'next', data: { turbo_frame: "_top" } %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Batches Card -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800 mb-4"><%= t('sidebar.batches') %></h2>
      <p class="text-4xl font-bold text-blue-600"><%= @batches.total_count %></p>
    
      <div id="batches-scroll-container" class="mt-4 overflow-y-auto max-h-[400px] scroll-container">
        <ul class="space-y-3" id="batches-list">
          <% @batches.each do |batch| %>
            <%= render 'dashboard/batch', batch: batch %>
          <% end %>
        </ul>
        
        <% if @batches.next_page %>
          <div id="batches-pagination" class="hidden">
            <%= link_to "Next page", dashboard_path(batches_page: @batches.next_page, card: 'batches'), 
                        rel: 'next', data: { turbo_frame: "_top" } %>
          </div>
        <% end %>
      </div>
    </div> 

    <!-- Recipes Card -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800 mb-4"><%= t('sidebar.recipes') %></h2>
      <p class="text-4xl font-bold text-green-600"><%= @recipes.size %></p>

      <div id="recipes-scroll-container" class="mt-4 overflow-y-auto max-h-[400px] scroll-container">
        <ul class="space-y-3" id="recipes-list">
          <% @recipes.each do |recipe| %>
            <%= render 'dashboard/recipe', recipe: recipe %>
          <% end %>
        </ul>
        
        <% if @recipes.next_page %>
          <div id="recipes-pagination" class="hidden">
            <%= link_to "Next page", dashboard_path(recipes_page: @recipes.next_page, card: 'recipes'), 
                        rel: 'next', data: { turbo_frame: "_top" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>