<turbo-frame id='main'>  
  <div class="max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-md">
    <!-- Batch Header -->
    <h1 class="text-3xl font-bold text-gray-900 mb-6"><%= t("batches.show.title", number: @batch.batch_number) %></h1>

    <!-- Batch Details -->
    <div class="bg-gray-100 p-4 rounded-lg shadow-sm mb-6">
      <p class="text-gray-700">
        <strong><%= t("batches.show.manufactured_date") %>:</strong> <%= @batch.manufactured_date || t("batches.show.na") %>
      </p>
      <p class="text-gray-700">
        <strong><%= t("batches.show.expiration_date") %>:</strong> <%= @batch.expiration_date || t("batches.show.na") %>
      </p>
    </div>

    <!-- Products in Batch -->
    <h2 class="text-2xl font-semibold text-gray-800 mb-4"><%= t("batches.show.products_in_batch") %></h2>

    <div class="overflow-x-auto">
      <table class="w-full bg-gray-50 rounded-lg shadow-md">
        <thead>
          <tr class="bg-gray-200 text-gray-700 uppercase text-sm font-semibold">
            <th class="py-3 px-4 text-left"><%= t("batches.show.table.product") %></th>
            <th class="py-3 px-4 text-left"><%= t("batches.show.table.sku") %></th>
            <th class="py-3 px-4 text-left"><%= t("batches.show.table.unit_type") %></th>
            <th class="py-3 px-4 text-left"><%= t("batches.show.table.location") %></th>
            <th class="py-3 px-4 text-left"><%= t("batches.show.table.quantity") %></th>
            <th class="py-3 px-4 text-left"><%= t("batches.show.table.notification_days") %></th>
          </tr>
        </thead>
        <tbody class="divide-y">
          <% @batch.products.each do |product| %>
            <% product.inventory_items.each do |inventory_item| %>
              <tr class="bg-white hover:bg-gray-100 transition">
                <td class="py-3 px-4 font-medium text-gray-800"><%= product.name %></td>
                <td class="py-3 px-4 font-medium text-gray-800"><%= product.sku %></td>
                <td class="py-3 px-4 font-medium text-gray-800"><%= product.unit_type.titleize %></td>
                <td class="py-3 px-4 text-gray-700"><%= inventory_item.location&.name || t("batches.show.no_location") %></td>
                <td class="py-3 px-4 font-medium text-blue-600"><%= inventory_item.quantity %></td>
                <td class="py-3 px-4 font-medium text-gray-800"><%= product.batch.notification_days_before_expiration %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Action Buttons -->
    <div class="mt-8 flex space-x-4">
      <%= link_to t("batches.show.edit"), edit_batch_path(@batch), class: "bg-blue bg-yellow-600 text-white px-5 py-2 rounded hover:bg-yellow-700 transition" %>
      <%= link_to t("batches.show.back"), batches_path, class: "bg-gray bg-gray-600 text-white px-5 py-2 rounded hover:bg-gray-700 transition" %>
    </div>
  </div>
</turbo-frame>
