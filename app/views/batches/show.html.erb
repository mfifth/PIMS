<div class="max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-md">
  <!-- Batch Header -->
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Batch <%= @batch.batch_number %></h1>

  <!-- Batch Details -->
  <div class="bg-gray-100 p-4 rounded-lg shadow-sm mb-6">
    <p class="text-gray-700"><strong>Manufactured Date:</strong> <%= @batch.manufactured_date || 'N/A' %></p>
    <p class="text-gray-700"><strong>Expiration Date:</strong> <%= @batch.expiration_date || 'N/A' %></p>
    <p class="text-gray-700"><strong>Supplier:</strong> <%= @batch.supplier&.name || 'No Supplier' %></p>
  </div>

  <!-- Products in Batch -->
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">Products in This Batch</h2>

  <div class="overflow-x-auto">
    <table class="w-full bg-gray-50 rounded-lg shadow-md">
      <thead>
        <tr class="bg-gray-200 text-gray-700 uppercase text-sm font-semibold">
          <th class="py-3 px-4 text-left">Product</th>
          <th class="py-3 px-4 text-left">SKU</th>
          <th class="py-3 px-4 text-left">Location</th>
          <th class="py-3 px-4 text-left">Quantity</th>
          <th class="py-3 px-4 text-left">Notification Days Before</th>
        </tr>
      </thead>
      <tbody class="divide-y">
        <% @batch.products.each do |product| %>
          <% product.inventory_items.each do |inventory_item| %>
            <tr class="bg-white hover:bg-gray-100 transition">
              <td class="py-3 px-4 font-medium text-gray-800"><%= product.name %></td>
              <td class="py-3 px-4 font-medium text-gray-800"><%= product.sku %></td>
              <td class="py-3 px-4 text-gray-700"><%= inventory_item.location&.name || 'No Location' %></td>
              <td class="py-3 px-4 font-medium text-blue-600"><%= inventory_item.quantity %></td>
              <td class="py-3 px-4 font-medium text-gray-800"><%= product.batch.notification_days_before_expiration %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Action Buttons -->
  <div class="mt-8 flex space-x-4">
    <%= link_to 'Edit', edit_batch_path(@batch), class: "bg-blue bg-yellow-600 text-white px-5 py-2 rounded hover:bg-yellow-700 transition" %>
    <%= link_to 'Back to Batches', batches_path, class: "bg-gray bg-gray-600 text-white px-5 py-2 rounded hover:bg-gray-700 transition" %>
  </div>
</div>
