<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-lg p-8 bg-white shadow-md rounded-lg">
    <h2 class="text-2xl font-semibold text-center text-gray-700"><%= t('sign_in.title') %></h2>

    <%= form_with url: session_path(locale: params[:locale]), data: { turbo: false }, class: "mt-6 space-y-4" do |form| %>
      
      <!-- Email Field -->
      <div>
        <%= form.email_field :email_address, 
          required: true, autofocus: true, autocomplete: "username", 
          placeholder: t('sign_in.form.email_placeholder'), 
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <!-- Password Field -->
      <div>
        <%= form.password_field :password, 
          required: true, autocomplete: "current-password", 
          placeholder: t('sign_in.form.password_placeholder'), 
          maxlength: 72,
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div style='background-color: green; color: white;' class="w-full px-4 py-2 text-gray text-center bg-gray-600 rounded-lg hover:bg-green-700 transition">
        <%= form.submit t('sign_in.form.submit_button') %>
      </div>
    <% end %>

    <div class="mt-4 text-center space-y-3">
      <%= link_to t('sign_in.forgot_password'), new_password_path, 
        class: "w-full inline-block px-4 py-2 text-white bg-red-500 rounded-lg hover:bg-red-600 transition" %>

      <!-- Sign Up (Blue) -->
      <div>
        <%= link_to t('sign_in.sign_up_link'), '/users/new', 
          class: "w-full inline-block px-4 py-2 text-white bg-blue-500 rounded-lg hover:bg-blue-600 transition" %>
      </div>

      <div>
        <%= link_to t('sign_in.resend_confirmation'), '/resend_confirmation', 
          class: "w-full inline-block px-4 py-2 text-white bg-yellow-500 rounded-lg transition" %>
      </div>
    </div>

  </div>
</div>